// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        String @id @unique @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password  String

  vehicle Vehicle[]
  address Address[]

  createdAt DateTime @default(now())
  @@map(name: "user")
}

model Vehicle {
  id        String @id @unique @default(uuid())
  make      String
  model     String
  userId    User   @relation(fields: [vehicleId], references: [id])
  vehicleId String

  @@map(name: "vehicle")
}

model Address {
  id        String @id @unique @default(uuid())
  state     String
  city      String
  zip       Int
  street    String
  userId    User   @relation(fields: [addressId], references: [id])
  addressId String

  @@map(name: "address")
}
